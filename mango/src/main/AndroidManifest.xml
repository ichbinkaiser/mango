<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shakeysnake.mango">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
                android:name="shakeysnake.mango.SplashActivity"
                android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="shakeysnake.mango.MainActivity">
        </activity>
        <activity
                android:name="shakeysnake.mango.ScoreActivity">
        </activity>
        <activity
                android:name="shakeysnake.mango.GameActivity">
        </activity>

    </application>

</manifest>
